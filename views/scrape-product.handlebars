<div class="container">

  <div class="text-center">
    <h1>Scraper</h1>
    <p class="lead">Use this form to SCRAPE product attributes</p>
  </div>

  <form class="form-horizontal" action="newproduct" method="post">
    <fieldset>

      <!-- Form Name -->
      <legend>Product</legend>

      <div class="form-row">
        <div class="form-group col-md-12">
          <label class="form-label" for="URL">URL</label>
          <input type="text" class="form-control" name="url" id="url" placeholder="Enter URL"
            required>
        </div>
      </div>

      <div class="form-group col-md-12 text-left">
        <label class="form-label">Plant Categories</label>
        <select required id="plantCategories" name="plantCategories" class="selectpicker" data-style="btn-outline-secondary"
          data-width="100%" title="Choose Categories for this Plant">
          <option value="vegetables">Vegetables</option>
          <option value="vegetables">Herbs</option>
          <option value="vegetables">Fruits</option>
          <option value="vegetables">Flowers</option>
        </select>
      </div>

      <div class="form-row">
        <div class="form-group col-md-3">
          <label class="form-label" for="plantClass">Plant Class</label>
          <input type="text" class="form-control" name="plantClass" id="plantClass" placeholder="Common Name"
            required>
        </div>
        <div class="form-group col-md-3">
          <label class="form-label" for="commonName">Common Name</label>
          <input type="text" class="form-control" name="commonName" id="commonName" placeholder="Common Name"
            required>
        </div>
        <div class="form-group col-md-3">
          <label class="form-label" for="variety">Plant Variety</label>
          <input type="text" class="form-control" name="variety" id="variety" placeholder="Variety"
            required>
        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="btnSaveProduct">Save Product</label>
        <div class="col-md-4">
          <button type="button" class="btn btn-primary save" id='save' name="save">Save</button>
        </div>
      </div>

    </fieldset>
  </form>

</div> <!-- /.container -->

<script src="/assets/js/scrape-product.js"></script>